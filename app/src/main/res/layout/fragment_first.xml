<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.firstapipack.FirstFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/txtData"
        android:layout_width="379dp"
        android:layout_height="264dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="256dp"
        android:layout_marginEnd="15dp"
        android:text="Тут будуть API дані"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_first_to_sec"
        android:layout_width="172dp"
        android:layout_height="60dp"
        android:layout_marginStart="220dp"
        android:layout_marginBottom="20dp"
        android:text="Перейти на другий фрагмент"
        android:backgroundTint="#B85BDF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_get_1"
        android:layout_width="156dp"
        android:layout_height="60dp"
        android:layout_marginEnd="236dp"
        android:layout_marginBottom="20dp"
        android:text="Завантажити дані з Інтернету"
        android:backgroundTint="#B85BDF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
 />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="382dp"
        android:layout_height="225dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/biblephoto"
        tools:src="@drawable/biblephoto"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="376dp"
        android:layout_height="38dp"
        android:layout_marginTop="240dp"
        android:text="API Document for application and site development for churches and religious organizations."
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.424"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.348" />


</androidx.constraintlayout.widget.ConstraintLayout>